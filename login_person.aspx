<%@ Page Title="" Language="C#" MasterPageFile="~/MainMaster.Master" AutoEventWireup="true" CodeBehind="login_person.aspx.cs" Inherits="BAHRAIN_TOURS.login_person" %>
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
<div class="container">    <!-- Start login -->    <div class="discount" id="discount">        <div class="">            <div class="content">                <img src="imgs/users.png" alt="" style="margin-top: 160px;" />            </div>        </div>        <div class="form">            <div class="content">                <h2>Login as a person !!</h2>                <asp:TextBox class="input" ID="txtusername" runat="server" placeholder="Your Username"></asp:TextBox>                <asp:RegularExpressionValidator Display="Dynamic" ControlToValidate="txtusername" ID="revUsername" ValidationExpression="^[\s\S]{3,8}$" runat="server" ErrorMessage="Minimum 3 and Maximum 8 characters required for username." Font-Bold="True" ForeColor="Red"></asp:RegularExpressionValidator>                <asp:TextBox TextMode="Password" class="input" ID="txtpassword" runat="server" placeholder="Your Password"></asp:TextBox>                <asp:RegularExpressionValidator Display="Dynamic" ControlToValidate="txtpassword" ID="revPassword" ValidationExpression="^[\s\S]{3,15}$" runat="server" ErrorMessage="Minimum 3 and Maximum 15 characters required for password." Font-Bold="True" ForeColor="Red"></asp:RegularExpressionValidator>                <asp:Button ID="btnlogin" runat="server" Text="Login" OnClick="btnlogin_Click" />                <div>                    <asp:Label runat="server" ID="lblmsg" Text=""></asp:Label>                    <asp:SqlDataSource ID="SqlDataSource1" runat="server" ConnectionString="<%$ ConnectionStrings:ConnectionString %>" ProviderName="<%$ ConnectionStrings:ConnectionString.ProviderName %>" SelectCommand="SELECT * FROM [users]"></asp:SqlDataSource>                </div>            </div>        </div>    </div></div><!-- End login --><!-- End login -->
</asp:Content>
